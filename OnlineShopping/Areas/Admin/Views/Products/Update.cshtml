@model UpdateProductViewModel
@{
    ViewData["Title"] = "Update Product";
}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h5 class="content-header-title float-left pr-1 mb-0">Where are you : </h5>
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a href=""><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a>Products</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Update Product
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Description -->
            <section id="description" class="card">
                <div class="card-header">
                    <h4 class="card-title">
                    </h4>
                </div>
                <div class="card-content">
                    <div class="card-body">




                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="account-vertical-general" aria-labelledby="account-pill-general" aria-expanded="true">
                
                                <form asp-controller="Products"  asp-action="Update" method="post">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="text-danger" asp-validation-summary="All"></div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="controls">
                                                    <label asp-for="Title">Product Name</label>
                                                    <input type="hidden" asp-for="Id"/>
                                                    <input asp-for="Title" class="form-control" placeholder="Product Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="controls">
                                                    <label asp-for="Description">Product Description</label>
                                                    <input asp-for="Description" class="form-control" placeholder="Product Description">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="controls">
                                                    <label asp-for="Price">Product Price</label>
                                                    <input asp-for="Price" class="form-control" placeholder="Product Price">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="controls">
                                                    <label asp-for="CategoryId">Product Category</label>
                                                    <select class="form-control" asp-for="CategoryId" asp-items='new SelectList((List<Category>)ViewBag.Categories,"Id","Name")'>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="controls">
                                                    <label asp-for="BrandId">Product Brand</label>
                                                    <select class="form-control" asp-for="BrandId" asp-items='new SelectList((List<Brand>)ViewBag.Brands,"Id","Name")'>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex flex-sm-row flex-column justify-content-end">
                                            <button type="submit" class="btn btn-primary glow mr-sm-1 mb-1">
                                                Update Product
                                            </button>
                                            <a asp-controller="Dashboard" asp-action="Dashboard" class="btn btn-light mb-1">Cancel</a>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>





                    </div>
                </div>
            </section>
            <!--/ Description -->


        </div>
    </div>
</div>
<!-- END: Content-->
@section Scripts{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#myImagePerview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
        $("#select-files").change(function() {
            readURL(this);
        });
    </script>
}