@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h5 class="content-header-title float-left pr-1 mb-0">Where are you : </h5>
                        <div class="breadcrumb-wrapper col-12">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a href=""><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a>Account Management</a>
                                </li>
                                <li class="breadcrumb-item active">
                                   Change Password
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Description -->
            <section id="description" class="card">
                <div class="card-header">
                    <h4 class="card-title">
                    </h4>
                </div>
                <div class="card-content">
                    <div class="card-body">



                        <form asp-controller="Auth" asp-action="ChangePassword" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label asp-for="CurrentPassword">Current password</label>
                                            <input class="form-control" asp-for="CurrentPassword" placeholder="Current password">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label asp-for="NewPassword">New password</label>
                                            <input class="form-control" asp-for="NewPassword" placeholder="New password">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="controls">
                                            <label asp-for="ConfirmPassword">Confirm new password</label>
                                            <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm new password">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 d-flex flex-sm-row flex-column justify-content-end">
                                    <button type="submit" class="btn btn-primary glow mr-sm-1 mb-1">
                                       Change Password
                                    </button>

                                </div>
                                <div class="text-danger" asp-validation-summary="All"></div>
                            </div>
                        </form>


                    </div>
                </div>
            </section>
            <!--/ Description -->


        </div>
    </div>
</div>
<!-- END: Content-->
