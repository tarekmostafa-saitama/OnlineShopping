    <div class="bg-light text-center font-weight-bolder p-5 my-3">
        <h2>Product Details</h2>
    </div>
    <br />
    <br />
    <br />

    <table class="table">

        <tr>
            <td rowspan="8">
                <div class="border-dark">
                    <img src="@Model.productImages.ToList().FirstOrDefault().Path" alt="product_img1">
                </div>
            </td>
            <td>
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>
        <tr>
